    <LinearLayout
        android:id="@+id/info_status"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemStatusDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/07/2020"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemStatusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/itemCapital"/>

        <TextView
            android:id="@+id/itemStatusQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quantity"/>

        <TextView
            android:id="@+id/itemStatusDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <TextView
        android:id="@+id/itemStatusStatus"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/info_status"
        android:text="Status"/>

</RelativeLayout>