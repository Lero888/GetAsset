<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_item_reservation"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/IR_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/item_reservation"
            android:textColor="#0C0C0C"
            android:textSize="30sp"
            android:textStyle="bold" />

<!--         Table-->
        <ImageButton
            android:id="@+id/button_table"
            android:contentDescription="@string/table"
            android:layout_width="117dp"
            android:layout_height="114dp"
            android:layout_below="@id/IR_title"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="42dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/table" />

        <TextView
            android:id="@+id/Table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button_table"
            android:layout_toEndOf="@id/button_table"
            android:layout_below="@id/IR_title"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/table"
            android:textColor="#130202"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/TableQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_table"
            android:layout_toEndOf="@id/button_table"
            android:layout_below="@id/Table"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/TableAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Table"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/TableQuantity"
            android:layout_toEndOf="@id/TableQuantity"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="Quantity" />

<!--        Chair-->
        <ImageButton
            android:id="@+id/button_chair"
            android:contentDescription="@string/chair"
            android:layout_width="117dp"
            android:layout_height="114dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@id/button_table"
            android:src="@drawable/chair" />

        <TextView
            android:id="@+id/Chair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_chair"
            android:layout_toEndOf="@id/button_chair"
            android:layout_below="@id/button_table"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/chair"
            android:textColor="#130202"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ChairQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_chair"
            android:layout_toEndOf="@id/button_chair"
            android:layout_below="@id/Chair"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/ChairAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Chair"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_toRightOf="@id/ChairQuantity"
            android:layout_toEndOf="@id/ChairQuantity"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="@string/quantity"/>

        <ImageButton
            android:id="@+id/button_IT"
            android:contentDescription="@string/ITEquip"
            android:layout_width="117dp"
            android:layout_height="114dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@id/button_chair"
            android:src="@drawable/it_equip" />



        <TextView
            android:id="@+id/ITEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_IT"
            android:layout_toEndOf="@id/button_IT"
            android:layout_below="@id/button_chair"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/ITEquip"
            android:textColor="#130202"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ITQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/button_IT"
            android:layout_toEndOf="@id/button_IT"
            android:layout_below="@id/ITEquipment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/ITAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ITEquipment"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_toRightOf="@id/ITQuantity"
            android:layout_toEndOf="@id/ITQuantity"
            android:textColor="#130202"
            android:textSize="20sp"
            android:text="@string/quantity"/>


    </RelativeLayout>



</FrameLayout>